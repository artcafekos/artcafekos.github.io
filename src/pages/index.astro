---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Hero from "~/components/Hero.astro";
import { Picture, Image } from "astro:assets";
import Badge from "~/components/Badge.astro";
import Button from "~/components/Button.astro";
import ButtonCallUs from "~/components/ButtonCallUs.astro";
import Grid from "~/components/Grid.astro";
import Heading from "~/components/Heading.astro";
import WideImage from "~/components/WideImage.astro";
import ReviewSlider from "~/components/ReviewSlider.astro";


// Images
import artlogo from "~/assets/images/art-logo.png";
import fredo from "~/assets/images/frespr.jpg";
import capuccino from "~/assets/images/capuccino.png";
import DecorativeImage from "~/assets/images/wide.png";
import reviewAuthors from "~/assets/images/review-authors.png";
import Dessert from "~/assets/images/dessert.png";
import yourImageVar from "~/assets/images/wide.png";
const backgroundUrl = `url(${yourImageVar.src})`;

---

<Layout title="Art Cafe Espresso Bar" pageTitle="Art Cafe Espresso Bar" description="Welcome to our Cafe!">
	<Section  class="bg-[url('/bg-01.jpg')] bg-black/30 bg-blend-multiply bg-cover bg-center bg-no-repeat " >
		<Hero>
			<div slot="hero-content-left" class="prose max-w-none max-lg:order-1">
				<Badge color="red2" text="white" title="About Us" />
				<h1 class="text-white">Art Cafe Espresso  Bar</h1>

				<p class="text-white ">
					Established in 2015, Art Cafe is a family coffee shop that offers an experience unlike any other in Kos.
					Our goal is to indulge the senses of all coffee lovers and travelers and offer them a relaxing break in a bubble of coziness.
					If you're looking for a place to kick start your day, to relax, or you are a coffee enthusiast then Art Cafe is just what you're looking for.
				</p>

				<div class="mt-8 flex items-center gap-x-8">
					<Button color="red" url="/menu">See our Menu</Button>
					<Button color="red" url="https://maps.app.goo.gl/51tXRMsmRErXNHMn6" target="_blank">Find Us on Google Maps</Button>
					<ButtonCallUs />
					
				</div>
			</div>
			<div slot="hero-content-right">
				<Picture
					class:list={"mx-auto"}
					src={artlogo}
					height={600}
					formats={["avif", "webp","jpg"]}
					alt="A description of my image."
					loading={"eager"}
					fetchpriority={"high"}
				/>
			</div>
		</Hero>
			

	</Section>
	

<!--<WideImage image={DecorativeImage} alt="Just an image" class:list={"aspect-video lg:aspect-[16/6]"} /> -->

	
	<!-- Reviews -->
	<Section class:list={"bg-red-900 relative"}>
		<div class="py-16">
			<Hero>
				<div slot="hero-content-left" class="prose max-w-none order-2">
					<div class="text-center not-prose">
						<Badge color="white" title="reviews" />
					</div>
					<h2 slot="heading-title" class="text-white font-black h4 text-center mt-0 mb-4">What our customers say...</h2>
					<div slot="heading-content">
						<p class="text-center text-white">
							Don't just take our word for it. Read what our customers have to say about their 
							experience at our Cafe.
						</p>

						<ReviewSlider />
					</div>
				</div>

				<div slot="hero-content-right">
					<Picture src={reviewAuthors} alt="Review authors" class="w-full h-auto" />
				</div>
			</Hero>
		</div>

		<svg
			xmlns="http://www.w3.org/2000/svg"
			viewBox="0 0 1440 320"
			class="absolute h-40 w-full top-0 inset-x-0 rotate-180"
			preserveAspectRatio="none"
			><path
				fill="#ffffff"
				fill-opacity="1"
				d="M0,288L48,272C96,256,192,224,288,197.3C384,171,480,149,576,165.3C672,181,768,235,864,250.7C960,267,1056,245,1152,250.7C1248,256,1344,288,1392,304L1440,320L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
			></path>
		</svg>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			viewBox="0 0 1440 320"
			class="absolute h-40 w-full bottom-0 inset-x-0"
			preserveAspectRatio="none"
			><path
				fill="#f5f5f4"
				fill-opacity="1"
				d="M0,288L48,272C96,256,192,224,288,197.3C384,171,480,149,576,165.3C672,181,768,235,864,250.7C960,267,1056,245,1152,250.7C1248,256,1344,288,1392,304L1440,320L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
			></path>
		</svg>
	</Section>

	<!-- Desserts -->
	

	<!-- Contact -->
	<Section class:list={"bg-stone-100"}>
		<Hero>
			<div slot="hero-content-left" class="prose max-w-none">
				<Badge color="red" title="Καλημέρα" />
				<h2 slot="heading-title" class="font-black text-brand-red h2 !my-4">Drop by and say hello</h2>
				<div slot="heading-content">
					<p>
						We're located in the heart of the Kardamena, right next to the bus station to the Hotels.
					</p>

					<span class="text-brand-red font-medium">
						✔ We also do take-away, so you can enjoy your coffee and your snacks at home
					</span>
				</div>
			</div>

			<div slot="hero-content-right">
				<Picture
					class:list={"mx-auto"}
					src={capuccino}
					height={600}
					formats={["avif", "webp","jpg"]}
					alt="A description of my image."
				/>
			</div>
		</Hero>
	</Section>
</Layout>
